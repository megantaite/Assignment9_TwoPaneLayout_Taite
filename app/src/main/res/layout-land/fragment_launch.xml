<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageButton
            android:layout_width="120pt"
            android:layout_height="120pt"
            android:scaleType="fitCenter"
            android:background="@color/whiteColor"
            android:src="@drawable/gaudi"
            android:id="@+id/enterButton"
            android:padding="5pt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8pt"
            android:text="Gaudi, Antoni. 1852-1926. Spanish\narchitect. Famed work: La Sagrada\nFamilia"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25pt"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="My Notetaker:"
            android:paddingTop="10pt"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16pt"
            android:fontFamily="serif-monospace"
            android:text="ARCH150: Romanesque through Art Nouveau"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="5pt"/>

    </LinearLayout>


</LinearLayout>